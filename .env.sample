# Finance Tracker Application - Environment Variables
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ============================================
# Application Mode
# ============================================
# Set to 'production' for production deployment (enables rate limiting, strict CORS, etc.)
# Set to 'development' for local development without Docker
NODE_ENV=production

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=finance_tracker
POSTGRES_PORT=5432
POSTGRES_HOST=postgres

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=3010
SERVER_HOST=0.0.0.0

# ============================================
# Client Configuration
# ============================================
CLIENT_PORT=3000
CLIENT_HOST=0.0.0.0

# ============================================
# Security Secrets
# ============================================
# Generate with: openssl rand -base64 32
# MUST be set in production (minimum 32 characters)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# Example: https://yourdomain.com,https://www.yourdomain.com
# REQUIRED in production
ALLOWED_ORIGINS=http://localhost:3000

# ============================================
# API Configuration
# ============================================
# Backend API URL for client-side requests
# For Docker: use service name (http://server:3010)
# For production: use your domain (https://api.yourdomain.com)
NEXT_PUBLIC_API_BASE_URL=http://server:3010

# ============================================
# Cookie Security
# ============================================
# Set to 'true' in production with HTTPS
# Set to 'false' for local development/testing
SECURE_COOKIES=false

# ============================================
# Rate Limiting (only active when NODE_ENV=production)
# ============================================
# Time-to-live in seconds for rate limit buckets
THROTTLE_TTL=60
# Maximum requests per TTL period
THROTTLE_LIMIT=10